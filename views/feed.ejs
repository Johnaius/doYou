<%- include('partials/logged-in-header') -%>

<div class="container card-container">
  <h1 class="text-4xl mb-8  ">Explore doYou's</h1>
<div class="row row-cols-1 row-cols-md-3 g-4">
        <% for(var i=0; i<posts.length; i++) {%>
          <div class="col"data-theme="dark">
            <div class="card h-100 relative h-80 w-full overflow-hidden rounded-lg bg-white group-hover:opacity-75 sm:aspect-w-2 sm:aspect-h-1 sm:h-64 lg:aspect-w-1 lg:aspect-h-2" data-theme="dark">
              <img src="<%= posts[i].image%>" class="card-img-top h-60 w-full object-cover object-center" alt="...">
              <div class="card-body py-1" data-theme="dark">
                <h5 class="card-title"><%= posts[i].title%></h5>
                <!-- <p class="card-text"><i class="px-1 bi bi-heart"></i><%= posts[i].likes.length - 1 %></p> -->
                <p class="card-text"><%= posts[i].one %></p>
                <p class="card-text"><small class="text-muted">By: <%= userName[i]%></small></p>
                <a href="/post/<%= posts[i]._id%>" class="btn btn-outline btn-primary mb-2">View 7-5-3-1</a>
              </div>
            </div>
          </div>
          <% } %>
        </div>
      </div>
<%- include('partials/footer') -%>