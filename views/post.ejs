<%- include("partials/remindhead") %>
<div class="row">
  <div class="min-vw-screen bg-textbox">
    <div class="hero-content flex-col lg:flex-row-reverse pt-36 bg-textbox">
      <div class="col-md-4 ml-10">
        <img src="<%= post.image%>" class="img-fluid mask mask-hexagon " alt="Responsive image">
      </div>
      <div class="grid-flow-row">
        <h1 class="text-5xl font-bold"><a href="/feed">7-5-3-1</a></h1>
        <h2 class="text-2xl font-bold mt-3">Seven of Something</h2>
        <hr class="style1">
        <ul class="list-unstyled">
          <li><%= post.seven %></li>
        </ul>
        <h2 class="text-2xl font-bold mt-3">Five Things You're Grateful For:</h2>
        <hr class="style1">
        <ul class="list-group list-group">
          <% for(var i=0; i<post.five.length; i++) { %>
            <li class="">• <%= post.five[i] %></li>
          <% } %>
        </ul>
        <h2 class="text-2xl font-bold mt-3">Three Things to Work On</h2>
        <hr class="style1">
        <ul class="list-group list-group">
          <% for(var i=0; i<post.three.length; i++) { %>
            <li class="">∆ <%= post.three[i] %></li>
          <% } %>
        </ul>
        <h2 class="text-2xl font-bold mt-3">One Fact or Positive Affirmation About You</h2>
        <hr class="style1">
        <ul class="list-unstyled py-6">
          <li><%= post.one %></li>
        </ul>
        <hr class="style1">
        <div class="btn-group mt-2">
          <h3 class="col">Likes: <%= post.likes %></h3>
          <form action="/post/likePost/<%= post.id %>?_method=PUT" method="POST" class="col-1">
            <button class="fa fa-heart text-base font-medium text-white border border-transparent rounded-md shadow-sm bg-gray-800 hover:bg-coral-dark  btn btn-secondary" type="submit"></button>
          </form>
          <% if(post.user == user.id) { %>
            <form action="/post/deletePost/<%= post.id %>?_method=DELETE" method="POST" class="col-1">
              <button class="btn btn-secondary bg-gray-800 fa fa-trash ml-12 mb-5" type="submit"></button>
            </form>
          <% } %>
        </div>
        <ul>
          <% for(var i=0; i<comments.length; i++) { %>
            <li class="col-6 justify-content-between mt-5">
              <h4><%= comments[i].user.userName %></h4>
              <%= comments[i].comment %>
            </li>
          <% } %>
        </ul>
        <form action="/comment/createComment/<%= post.id %>" method="POST">
          <div class="mb-3">
            <label for="comment" class="form-label">Comment</label>
            <input type="text" class="form-control w-50" id="comment" name="comment">
          </div>
          <button type="submit" class="text-base font-medium text-white border border-transparent rounded-md shadow-sm bg-gray-800 hover:bg-coral-dark  btn btn-secondary">
            Submit
          </button>
        </form>
         <div class="col-6 mt-5">
                    <a class="btn btn-secondary bg-gray-800" href="/profile"
                      >Return to Profile</a
                    >
                    <a class="btn btn-secondary bg-gray-800 mt-4" href="/feed">Return to Feed</a>
                  </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
                  <%- include('partials/footer') -%>
